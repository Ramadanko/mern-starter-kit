{
  "name": "mern-stack",
  "version": "1.0.0",
  "description": "A starter kit for mern stack with sample project + authentication",
  "main": "src/index.js",
  "scripts": {
    "dev": "nodemon --require dotenv/config src/index.js --exec babel-node | bunyan",
    "standard": "standard  src/**/*.js --verbose | snazzy",
    "fix": "standard --fix",
    "build": "npx babel src --out-dir build",
    "prestart": "npm run build",
    "start": "node --require dotenv/config build/index.js"
  },
  "keywords": [
    "nodejs",
    "react",
    "mern",
    "mern stack"
  ],
  "author": "Mohammed Ramadan",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.10.5",
    "@babel/node": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "babel-eslint": "^10.1.0",
    "nodemon": "^2.0.4",
    "snazzy": "^8.0.0",
    "standard": "^14.3.4"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "bunyan": "^1.8.14",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-jwt": "^6.0.0",
    "express-validator": "^6.6.0",
    "helmet": "^3.23.3",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.9.26",
    "morgan": "^1.10.0",
    "sanitize-html": "^1.27.1",
    "serve-favicon": "^2.5.0"
  },
  "standard": {
    "ignore": [
      "build",
      "src/index.js",
      "src/utilities/functions.js"
    ],
    "parser": "babel-eslint"
  }
}
